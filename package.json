{
  "name": "neurovis3d",
  "version": "0.1.0",
  "description": "3D visualization platform for mapping mechanosensory envelope models to neural circuits using FlyWire connectome data",
  "keywords": [
    "neuroscience",
    "connectome",
    "3d-visualization",
    "angular",
    "threejs",
    "mechanosensory",
    "drosophila",
    "flywire"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "test": "ng test",
    "deploy": "firebase deploy --only hosting",
    "cypress:open": "cypress open --config-file config/cypress.config.ts",
    "cypress:run": "cypress run --config-file config/cypress.config.ts"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/cdk": "^20.1.2",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.1.2",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/service-worker": "^20.0.0",
    "neuroglancer": "^2.40.1",
    "rxjs": "^7.8.0",
    "three": "^0.170.0",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@cypress/schematic": "^3.0.0",
    "@types/three": "^0.170.0",
    "cypress": "^14.5.2",
    "typescript": "~5.8.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
